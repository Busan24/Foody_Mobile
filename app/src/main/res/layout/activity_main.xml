<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:id="@+id/ly_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/yodak"
            android:paddingTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="35sp"
            android:textColor="@color/birutua"
            android:paddingTop="50dp"
            android:layout_gravity="center"
            android:paddingBottom="20dp"/>
        
        <View
            android:layout_width="60dp"
            android:layout_height="7dp"
            android:background="@drawable/rounded_rectangle"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See your growt and get\nconsulting support!"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/abupucet"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:paddingTop="20dp"
            android:paddingBottom="40dp"/>

        <EditText
            android:layout_width="340dp"
            android:layout_height="65dp"
            android:background="@drawable/input_abupucet"
            android:hint="Email"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:id="@+id/email_login"/>

        <EditText
            android:layout_width="340dp"
            android:layout_height="65dp"
            android:background="@drawable/input_abupucet"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/password_login"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:width="340dp"
            android:height="65dp"
            android:text="LOGIN"
            android:textSize="25dp"
            android:textColor="@color/birutua"
            android:background="@drawable/button_birucerah"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:id="@+id/orgaris"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:src="@drawable/orlogin"
            android:layout_gravity="center"
            android:paddingTop="20dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ly_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ly_1"
        android:gravity="center"
        android:paddingTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No account?"
            android:textColor="@color/abupucet"
            android:textSize="13dp" />
        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Register"
            android:textColor="@color/birutua"
            android:textSize="13dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ly_2"
        android:gravity="center"
        android:paddingTop="20dp"
        android:textAlignment="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This site is protected by reCAPTHA and  the Google"
            android:textColor="@color/abupucet"
            android:textSize="13dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ly_3"
        android:gravity="center"
        android:textAlignment="center">

        <TextView
            android:id="@+id/privacy_police"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy police"
            android:textColor="@color/birutua"
            android:textSize="13dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" and"
            android:textColor="@color/abupucet"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tm_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Tearms of Service"
            android:textColor="@color/birutua"
            android:textSize="13dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" apply"
            android:textColor="@color/abupucet"
            android:textSize="13dp" />

    </LinearLayout>


</RelativeLayout>