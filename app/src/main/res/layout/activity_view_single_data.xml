<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewSingleData"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/text_hal_profil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/pink">

        <TextView
            android:id="@+id/profil_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATA DETAIL CATATANKU"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="25dp"
            android:textColor="@color/birutua"
            android:layout_gravity="center"
            android:padding="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewSingleData"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Makanan :"
            android:textColor="@color/birutua"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:textSize="16dp"
            android:textColor="@color/birutua"
            android:background="@drawable/input_abupucet"
            android:layout_marginBottom="5dp"
            android:paddingTop="21dp"
            android:paddingLeft="12dp"
            android:id="@+id/tv_nama_makanan"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu :"
            android:textColor="@color/birutua"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:textSize="16dp"
            android:textColor="@color/birutua"
            android:background="@drawable/input_abupucet"
            android:layout_marginBottom="5dp"
            android:paddingTop="21dp"
            android:paddingLeft="12dp"
            android:id="@+id/tv_waktu"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jumlah :"
            android:textColor="@color/birutua"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:textSize="16dp"
            android:textColor="@color/birutua"
            android:background="@drawable/input_abupucet"
            android:layout_marginBottom="5dp"
            android:paddingTop="21dp"
            android:paddingLeft="12dp"
            android:id="@+id/tv_jumlah"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/back_daftar_catatanku"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Back to Daftar Catatanku"
            android:textColor="@color/birutua"
            android:background="@drawable/pp_birucerah"
            android:layout_marginTop="10dp"
            android:onClick="aksiBacktToDaftar"/>
    </LinearLayout>

</LinearLayout>