<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="248dp"
    android:background="@drawable/outline_abu"
    tools:context=".DataProduk"
    android:layout_marginBottom="25dp"
    android:layout_marginRight="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="125dp">
            <ImageView
                android:id="@+id/gambar_produk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sweet_potato" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:id="@+id/nama_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grilled Cicken"
                android:textColor="@color/birutua"
                android:textSize="12dp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/deskripsi_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet consectetur. Lorem ipsum dolor sit amet consectetur. Lorem ipsum dolor sit amet."
                android:textSize="9dp"
                android:textColor="@color/abupucet"
                android:layout_marginTop="3dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp "
            android:textColor="@color/birutua"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/harga_produk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20,000"
            android:textSize="14dp"
            android:textColor="@color/birutua"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/link_produk"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/btn_beli"
                android:layout_alignParentEnd="true"
                android:drawableStart="@drawable/icon_beli"
                android:paddingLeft="5dp"
                android:layout_marginBottom="5dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>