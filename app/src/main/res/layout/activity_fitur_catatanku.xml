<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fitur_catatanku">

    <LinearLayout
        android:id="@+id/text_hal_ctt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/birucerah">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CATATANKU"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="25dp"
            android:textColor="@color/birutua"
            android:layout_gravity="center"
            android:padding="20dp" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select your meal time to add notes"
                android:fontFamily="sans-serif"
                android:textSize="16dp"
                android:textColor="@color/birutua"
                android:layout_gravity="center"
                android:paddingTop="20dp" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="124dp"
                        android:layout_height="184dp"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/pink"
                        android:id="@+id/card_nyatat">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/kotak_nyatat">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="70dp"
                                android:src="@drawable/icon_pagi"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Morning"
                                android:textColor="@color/birutua"
                                android:textSize="15dp"
                                android:fontFamily="sans-serif"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="05.00 - 10.00"
                                android:textColor="@color/birutua"
                                android:textSize="15dp"
                                android:fontFamily="sans-serif"
                                android:paddingTop="10dp"
                                android:layout_gravity="center"/>
                            <Button
                                android:id="@+id/btn_nyatat"
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:background="@drawable/btn_bulat"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:drawableLeft="@drawable/vector"
                                android:paddingLeft="9dp"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="124dp"
                        android:layout_height="184dp"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/birucerah">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="70dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/icon_siang"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Afternoon"
                                android:textColor="@color/birutua"
                                android:textSize="15dp"
                                android:fontFamily="sans-serif"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10.00 - 15.00"
                                android:textColor="@color/birutua"
                                android:textSize="15dp"
                                android:fontFamily="sans-serif"
                                android:paddingTop="10dp"
                                android:layout_gravity="center"/>
                            <Button
                                android:id="@+id/btn_nyatet_siang"
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:background="@drawable/btn_bulat"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:drawableLeft="@drawable/vector"
                                android:paddingLeft="9dp"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="124dp"
                        android:layout_height="184dp"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/pink">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="70dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/icon_siang"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Evening"
                                android:textColor="@color/birutua"
                                android:textSize="15dp"
                                android:fontFamily="sans-serif"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15.00 - 20.00"
                                android:textColor="@color/birutua"
                                android:textSize="15dp"
                                android:fontFamily="sans-serif"
                                android:paddingTop="10dp"
                                android:layout_gravity="center"/>
                            <Button
                                android:id="@+id/btn_nyatet_sore"
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:background="@drawable/btn_bulat"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:drawableLeft="@drawable/vector"
                                android:paddingLeft="9dp"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="124dp"
                        android:layout_height="184dp"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/birucerah">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="70dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/icon_malam"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Night"
                                android:textColor="@color/birutua"
                                android:textSize="15dp"
                                android:fontFamily="sans-serif"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20.00 - 00.00"
                                android:textColor="@color/birutua"
                                android:textSize="15dp"
                                android:fontFamily="sans-serif"
                                android:paddingTop="10dp"
                                android:layout_gravity="center"/>
                            <Button
                                android:id="@+id/btn_nyatet_malam"
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:background="@drawable/btn_bulat"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:drawableLeft="@drawable/vector"
                                android:paddingLeft="9dp"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/btn_rc_hs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btn_recent"
                    android:layout_width="160dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/button_birutua"
                    android:text="  Recent"
                    android:textSize="16dp"
                    android:textColor="@color/birucerah"
                    android:drawableStart="@drawable/icon_recent"
                    android:paddingLeft="45dp"
                    android:textAllCaps="false"
                    android:gravity="start|center_vertical"
                    />

                <Button
                    android:id="@+id/btn_hs_catatan"
                    android:layout_width="160dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/button_birucerah"
                    android:text="  History"
                    android:textSize="16dp"
                    android:textColor="@color/birutua"
                    android:drawableStart="@drawable/icon_history"
                    android:paddingLeft="45dp"
                    android:textAllCaps="false"
                    android:gravity="start|center_vertical"
                    />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/kotak_tgl_rc"
                android:layout_width="340dp"
                android:layout_height="46dp"
                android:background="@drawable/outline_abu"
                android:layout_below="@id/btn_rc_hs"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp">

                <TextView
                    android:id="@+id/hari_rc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunday"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/birutua"/>

                <TextView
                    android:id="@+id/tgl_wkt_rc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26/09/2023 14:25:58"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/birutua"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="340dp"
                android:layout_height="155dp"
                android:background="@drawable/outline_abu"
                android:layout_below="@id/kotak_tgl_rc"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp">

                <View
                    android:layout_width="10dp"
                    android:layout_height="155dp"
                    android:background="@drawable/pp_ot_pink"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baked Sweet Potato : 2"
                    android:textSize="18dp"
                    android:textColor="@color/birutua"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Karbohidrat : 10gr"
                    android:textColor="@color/abupucet"
                    android:textSize="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lemak : 10gr"
                    android:textColor="@color/abupucet"
                    android:textSize="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="70dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Serat : 10gr"
                    android:textColor="@color/abupucet"
                    android:textSize="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="90dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protein : 10gr"
                    android:textColor="@color/abupucet"
                    android:textSize="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="110dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="340dp"
                android:layout_height="46dp"
                android:background="@drawable/outline_abu"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunday"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/birutua"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26/09/2023 14:25:58"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/birutua"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="340dp"
                android:layout_height="155dp"
                android:background="@drawable/outline_abu"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp">

                <View
                    android:layout_width="10dp"
                    android:layout_height="155dp"
                    android:background="@drawable/pp_ot_birucerah"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baked Sweet Potato : 2"
                    android:textSize="18dp"
                    android:textColor="@color/birutua"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Karbohidrat : 10gr"
                    android:textColor="@color/abupucet"
                    android:textSize="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lemak : 10gr"
                    android:textColor="@color/abupucet"
                    android:textSize="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="70dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Serat : 10gr"
                    android:textColor="@color/abupucet"
                    android:textSize="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="90dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protein : 10gr"
                    android:textColor="@color/abupucet"
                    android:textSize="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="110dp"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="390dp"
        android:layout_height="80dp"
        android:background="@color/birucerah"
        app:menu="@menu/bottom_menu"
        android:layout_alignParentBottom="true"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@color/birutua"
        android:id="@+id/bottom_nav"
        />
</LinearLayout>
