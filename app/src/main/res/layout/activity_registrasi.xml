            <EditText
                android:layout_width="340dp"
                android:layout_height="55dp"
                android:background="@drawable/input_abupucet"
                android:hint="Password"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textPassword"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/password_regis"/>

            <EditText
                android:layout_width="340dp"
                android:layout_height="55dp"
                android:background="@drawable/input_abupucet"
                android:hint="Konfirmasi Password"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textPassword"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/cfpw_regis"/>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:width="340dp"
                android:text="Register"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/birutua"
                android:background="@drawable/button_birucerah"
                android:layout_marginTop="30dp"/>

            <ImageView
                android:id="@+id/orgaris"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:src="@drawable/orlogin"
                android:layout_gravity="center"
                android:paddingTop="20dp" />

        </LinearLayout>


        <LinearLayout
