<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="341dp"
    android:layout_height="wrap_content"
    tools:context=".fitur_catatanku"
    android:layout_gravity="center"
    android:id="@+id/bg_popup"
    android:background="@drawable/pp_pink">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_nyatat_hari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAGI"
            android:textSize="22dp"
            android:textColor="@color/birutua"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Makanan"
            android:textSize="13dp"
            android:textColor="@color/birutua"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

        <AutoCompleteTextView
            android:id="@+id/nama_makanan"
            android:layout_width="301dp"
            android:layout_height="40dp"
            android:hint="Masukkan Nama Makanan"
            android:background="@drawable/pp_putih"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:textSize="12dp"
            android:completionThreshold="1"
            android:inputType="text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Karbohidrat"
                    android:textSize="13dp"
                    android:textColor="@color/birutua"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/jmlh_karbohidrat"
                    android:layout_width="142dp"
                    android:layout_height="41dp"
                    android:background="@drawable/pp_putih"
                    android:paddingLeft="10dp"
                    android:hint="gram"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:inputType="number"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Protein"
                    android:textSize="13dp"
                    android:textColor="@color/birutua"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/jmlh_protein"
                    android:layout_width="142dp"
                    android:layout_height="41dp"
                    android:background="@drawable/pp_putih"
                    android:paddingLeft="10dp"
                    android:hint="gram"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:inputType="number"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Lemak"
                    android:textSize="13dp"
                    android:textColor="@color/birutua"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/jmlh_lemak"
                    android:layout_width="142dp"
                    android:layout_height="41dp"
                    android:background="@drawable/pp_putih"
                    android:paddingLeft="10dp"
                    android:hint="gram"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:inputType="number"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Gula"
                    android:textSize="13dp"
                    android:textColor="@color/birutua"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/jmlh_gula"
                    android:layout_width="142dp"
                    android:layout_height="41dp"
                    android:background="@drawable/pp_putih"
                    android:paddingLeft="10dp"
                    android:hint="gram"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:inputType="number"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Garam"
                    android:textSize="13dp"
                    android:textColor="@color/birutua"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/jmlh_garam"
                    android:layout_width="142dp"
                    android:layout_height="41dp"
                    android:background="@drawable/pp_putih"
                    android:paddingLeft="10dp"
                    android:hint="gram"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:inputType="number"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Porsi"
                    android:textSize="13dp"
                    android:textColor="@color/birutua"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/jmlh_porsi"
                    android:layout_width="142dp"
                    android:layout_height="41dp"
                    android:background="@drawable/pp_putih"
                    android:paddingLeft="10dp"
                    android:hint="porsi"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:inputType="number"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu Makan"
                android:textSize="13dp"
                android:textColor="@color/birutua"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>


            <Spinner
                android:id="@+id/waktu_nyatat"
                android:layout_width="301dp"
                android:layout_height="41dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/pp_putih"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:entries="@array/waktu_entries"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btn_save_ctt"
            android:layout_width="301dp"
            android:layout_height="40dp"
            android:background="@drawable/button_birutua"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:text="SIMPAN"
            android:textColor="@color/birucerah"/>

        <Button
            android:id="@+id/btn_generate_makanan"
            android:layout_width="301dp"
            android:layout_height="40dp"
            android:background="@drawable/button_birucerah"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:text="CARI DATA MAKANAN"
            android:textColor="@color/birutua"/>

    </LinearLayout>


</LinearLayout>