<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="341dp"
    android:layout_height="700dp"
    android:layout_gravity="center"
    tools:context=".PopupEditProfileActivity"
    android:id="@+id/bg_popup_ep"
    android:background="@drawable/pp_putih">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_nyatat_hari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT PROFILE"
                android:textSize="22dp"
                android:textColor="@color/birutua"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/foto_profil"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/profil_user"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/birutua"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/ep_nama"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="@drawable/input_abupucet"
                android:layout_marginTop="10dp"
                android:text="Go Yoon Jung"
                android:textSize="16dp"
                android:textColor="@color/birutua"
                android:paddingLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/birutua"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/ep_email"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="@drawable/input_abupucet"
                android:layout_marginTop="10dp"
                android:text="goyonjung123@gmail.com"
                android:textSize="16dp"
                android:textColor="@color/birutua"
                android:paddingLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/birutua"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/ep_username"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="@drawable/input_abupucet"
                android:layout_marginTop="10dp"
                android:text="yzung__"
                android:textSize="16dp"
                android:textColor="@color/birutua"
                android:paddingLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:textColor="@color/birutua"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/ep_date"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="@drawable/input_abupucet"
                android:layout_marginTop="10dp"
                android:text="1999-12-19"
                android:textSize="16dp"
                android:textColor="@color/birutua"
                android:paddingLeft="15dp"
                android:focusable="false"
                android:clickable="true"
                android:onClick="showDatePickerDialog"/>

            <Button
                android:id="@+id/btn_ep_save"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="@drawable/button_birutua"
                android:layout_marginTop="17dp"
                android:text="SAVE"
                android:textColor="@color/birucerah"
                android:textSize="16dp"/>

        </LinearLayout>
        <Button
            android:id="@+id/btn_nyatet_sore"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/btn_bulat_putih"
            android:layout_gravity="center"
            android:layout_marginTop="110dp"
            android:drawableLeft="@drawable/edit_profil"
            android:paddingLeft="10dp"
            android:layout_marginLeft="180dp"/>



    </RelativeLayout>


</LinearLayout>