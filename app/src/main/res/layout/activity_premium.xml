<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PremiumActivity">
    
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/white">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
             <ImageView
                 android:layout_width="120dp"
                 android:layout_height="101dp"
                 android:layout_marginTop="90dp"
                 android:src="@drawable/logo_prem"
                 android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Gabung Foody Premium dan nikmati fitur lengkap untuk membantu mencapai tujuan kesehatanmu"
                android:fontFamily="sans-serif"
                android:textSize="18dp"
                android:textColor="@color/birutua"
                android:layout_gravity="center"
                android:paddingTop="25dp"
                android:textAlignment="center" />

            <!--             Harga-Harga Premium          -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="20dp"
                        android:id="@+id/card_prem_1bulan"
                        app:cardCornerRadius="10dp">
                        <Button
                            android:id="@+id/prem_1bulan"
                            android:layout_width="166dp"
                            android:layout_height="110dp"
                            android:background="@drawable/kotak_prem_pink"/>
                         <LinearLayout
                             android:layout_width="166dp"
                             android:layout_height="110dp"
                             android:orientation="vertical">
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="1 Bulan"
                                 android:fontFamily="sans-serif"
                                 android:textSize="16dp"
                                 android:textColor="@color/birutua"
                                 android:layout_gravity="center"
                                 android:layout_marginTop="10dp"/>

                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="Rp 15.000"
                                 android:fontFamily="sans-serif"
                                 android:textSize="20dp"
                                 android:textColor="@color/birutua"
                                 android:layout_gravity="center"
                                 android:layout_marginTop="10dp"
                                 android:textStyle="bold"/>
                             <RelativeLayout
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:layout_marginTop="10dp"
                                 android:layout_marginLeft="10dp"
                                 android:layout_marginRight="10dp">
                                 <RelativeLayout
                                     android:layout_width="67dp"
                                     android:layout_height="1dp"
                                     android:background="@drawable/line_abu"
                                     android:layout_marginTop="10dp"
                                     android:layout_marginLeft="1dp"/>
                                 
                                 <LinearLayout
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:orientation="horizontal"
                                     android:gravity="center">
                                     <TextView
                                         android:layout_width="wrap_content"
                                         android:layout_height="wrap_content"
                                         android:text="Rp 18.000"
                                         android:fontFamily="sans-serif"
                                         android:textSize="14dp"
                                         android:textColor="@color/abupucet"
                                         />
                                     <TextView
                                         android:layout_width="wrap_content"
                                         android:layout_height="wrap_content"
                                         android:text="Hemat 16.6%"
                                         android:fontFamily="sans-serif"
                                         android:textSize="12dp"
                                         android:textColor="#FF7F00"
                                         android:layout_marginLeft="5dp"
                                         android:layout_gravity="center"/>
                                 </LinearLayout>
                             </RelativeLayout>
                         </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/card_prem_3bulan"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="10dp">
                        <Button
                            android:id="@+id/prem_3bulan"
                            android:layout_width="166dp"
                            android:layout_height="110dp"
                            android:background="@drawable/kotak_prem_abu"/>
                        <LinearLayout
                            android:layout_width="166dp"
                            android:layout_height="110dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 Bulan"
                                android:fontFamily="sans-serif"
                                android:textSize="16dp"
                                android:textColor="@color/birutua"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 35.000"
                                android:fontFamily="sans-serif"
                                android:textSize="20dp"
                                android:textColor="@color/birutua"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp">
                                <RelativeLayout
                                    android:layout_width="67dp"
                                    android:layout_height="1dp"
                                    android:background="@drawable/line_abu"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="1dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rp 45.000"
                                        android:fontFamily="sans-serif"
                                        android:textSize="14dp"
                                        android:textColor="@color/abupucet"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Hemat 22.2%"
                                        android:fontFamily="sans-serif"
                                        android:textSize="12dp"
                                        android:textColor="#FF7F00"
                                        android:layout_marginLeft="5dp"
                                        android:layout_gravity="center"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/card_prem_6bulan"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        >
                        <Button
                            android:id="@+id/prem_6bulan"
                            android:layout_width="166dp"
                            android:layout_height="110dp"
                            android:background="@drawable/kotak_prem_abu"/>
                        <LinearLayout
                            android:layout_width="166dp"
                            android:layout_height="110dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6 Bulan"
                                android:fontFamily="sans-serif"
                                android:textSize="16dp"
                                android:textColor="@color/birutua"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 60.000"
                                android:fontFamily="sans-serif"
                                android:textSize="20dp"
                                android:textColor="@color/birutua"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp">
                                <RelativeLayout
                                    android:layout_width="67dp"
                                    android:layout_height="1dp"
                                    android:background="@drawable/line_abu"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="1dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rp 90.000"
                                        android:fontFamily="sans-serif"
                                        android:textSize="14dp"
                                        android:textColor="@color/abupucet"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Hemat 33.3%"
                                        android:fontFamily="sans-serif"
                                        android:textSize="12dp"
                                        android:textColor="#FF7F00"
                                        android:layout_marginLeft="5dp"
                                        android:layout_gravity="center"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <!--             Fitur-Fitur Premium          -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="384dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:background="@drawable/gradient_pink_biru">

                <!--             Fitur Tanpa Iklan          -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp">
                    <RelativeLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_fitur_prem_pink">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="40dp"
                            android:src="@drawable/g_tanpa_iklan"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanpa Iklan"
                            android:fontFamily="sans-serif"
                            android:textSize="16dp"
                            android:textColor="@color/birutua"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nikmati pengalaman tanpa gangguan dengan tampilan bersih dan bebas iklan"
                            android:fontFamily="sans-serif"
                            android:textSize="12dp"
                            android:textColor="@color/abupucet"
                            android:layout_marginLeft="1dp"/>
                    </LinearLayout>

                </LinearLayout>

                <!--             Fitur Catatan Tanpa Batas          -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp">
                    <RelativeLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_fitur_prem_biru">
                        <ImageView
                            android:layout_width="37dp"
                            android:layout_height="37dp"
                            android:src="@drawable/icon_notes_prem"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Catatan Tanpa Batas"
                            android:fontFamily="sans-serif"
                            android:textSize="16dp"
                            android:textColor="@color/birutua"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Premium Catat makanan tanpa batas. Non-premium dibatasi hingga 3 kali sehari"
                            android:fontFamily="sans-serif"
                            android:textSize="12dp"
                            android:textColor="@color/abupucet"
                            android:layout_marginLeft="1dp"/>
                    </LinearLayout>

                </LinearLayout>

                <!--             Fitur AI Nutrisi          -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp">
                    <RelativeLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_fitur_prem_pink">
                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/icon_ai"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI Nutrisi"
                            android:fontFamily="sans-serif"
                            android:textSize="16dp"
                            android:textColor="@color/birutua"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gunakan AI untuk otomatis mendeteksi kandungan nutrisi makanan yang kamu konsumsi"
                            android:fontFamily="sans-serif"
                            android:textSize="12dp"
                            android:textColor="@color/abupucet"
                            android:layout_marginLeft="1dp"/>
                    </LinearLayout>

                </LinearLayout>

                <!--             Fitur Pengingat Nutrisi          -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp">
                    <RelativeLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_fitur_prem_biru">
                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@drawable/icon_report"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pengingat Nutrisi"
                            android:fontFamily="sans-serif"
                            android:textSize="16dp"
                            android:textColor="@color/birutua"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dapatkan peringatan otomatis jika kandungan nutrisi melebihi batas saat mencatat makanan"
                            android:fontFamily="sans-serif"
                            android:textSize="12dp"
                            android:textColor="@color/abupucet"
                            android:layout_marginLeft="1dp"/>
                    </LinearLayout>

                </LinearLayout>

                <!--             Laporan PDF          -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp">
                    <RelativeLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_fitur_prem_pink">
                        <ImageView
                            android:layout_width="31dp"
                            android:layout_height="36dp"
                            android:src="@drawable/icon_laporan_pdf"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Laporan PDF"
                            android:fontFamily="sans-serif"
                            android:textSize="16dp"
                            android:textColor="@color/birutua"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dapatkan ringkasan nutrisi harian dalam format PDF yang mudah dibaca"
                            android:fontFamily="sans-serif"
                            android:textSize="12dp"
                            android:textColor="@color/abupucet"
                            android:layout_marginLeft="1dp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/berlangganan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:width="340dp"
                android:height="65dp"
                android:text="Berlangganan Rp 15.000 / 1 Bulan"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textColor="@color/birucerah"
                android:background="@drawable/button_birutua"
                android:onClick="startMainActivity"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/tive_ct">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/pp_birucerah"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/back_arrow"
            android:paddingLeft="12dp"
            android:id="@+id/back_hal_catatanku"
            android:onClick="kembaliKeHome"
            android:layout_gravity="start|top"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/text_hs_ctt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOODY PREMIUM"
            android:textSize="20dp"
            android:textColor="@color/birutua"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100dp"
            android:layout_gravity="start|top"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</RelativeLayout>