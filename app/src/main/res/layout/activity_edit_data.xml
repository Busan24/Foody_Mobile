<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditData"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/text_hal_profil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/birucerah">

        <TextView
            android:id="@+id/profil_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FORM EDIT DATA"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="25dp"
            android:textColor="@color/birutua"
            android:layout_gravity="center"
            android:padding="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Makanan:"
            android:textColor="@color/birutua"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text=""
            android:textSize="16dp"
            android:textColor="@color/birutua"
            android:background="@drawable/input_abupucet"
            android:paddingLeft="10dp"
            android:id="@+id/edit_makanan"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu :"
            android:textColor="@color/birutua"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text=""
            android:textSize="16dp"
            android:textColor="@color/birutua"
            android:background="@drawable/input_abupucet"
            android:paddingLeft="10dp"
            android:id="@+id/edit_waktu"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jumlah :"
            android:textColor="@color/birutua"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text=""
            android:textSize="16dp"
            android:textColor="@color/birutua"
            android:background="@drawable/input_abupucet"
            android:paddingLeft="10dp"
            android:id="@+id/edit_jumlah" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:textColor="@color/birucerah"
                android:background="@drawable/button_birutua"
                android:id="@+id/tmb_simpan"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>